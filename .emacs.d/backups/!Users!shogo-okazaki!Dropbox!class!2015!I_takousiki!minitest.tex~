\textbf{数学$\alpha$ 小テスト 1 (展開の計算)}
\end{center}
\hfill 2年 \underline{\hspace{2zw}} 組 \underline{\hspace{4zw}}
  番 氏名 \underline{\hspace{12zw}}
\smallskip

\begin{EMminipages}{*,.4\textwidth}
 \begin{itemize}
  \item 次の式を展開しなさい.
  \begin{enumerate}[\large (1)]
   \setlength{\itemsep}{4zw} % 項目間
   \item $(x-4)(x+4)$
   \item $(x-a)^2$
   \item $(x-3)(x-5)$
   \item $(2x+3)(3x+1)$
   \item $(x+y+1)(x+2)$
  \end{enumerate}
 \end{itemize}
 
 \EMminipagesbreak
 
 \begin{center}
  \textbf{【解答欄】}
 \end{center}
 \def\arraystretch{2.5}
 \centering
 $\begin{array}[t]{|c|C{20zw}|}\hline
  \ifmaskAns 
   (1)& \\ \hline
   (2)& \\ \hline
   (3)& \\ \hline
   (4)& \\ \hline
   (5)& \\ \hline
 \else
   (1)& x^2-16\\ \hline
   (2)& x^2-2ax+a^2\\ \hline
   (3)& x^2-8x+15 \\ \hline
   (4)& 6x^2+11x+3 \\ \hline
   (5)& x^2+3x+xy+2y+2y+2\\ \hline
   \fi
  \end{array}$
\end{EMminipages}%

