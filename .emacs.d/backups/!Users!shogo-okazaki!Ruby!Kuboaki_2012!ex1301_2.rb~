# -*- coding: utf-8 -*-
# Student クラスを作る
class Student
  # Student クラスのインスタンスを初期化
  def initialize( name, age )
    @name = name
    @age = age
  end

  # Student クラスのインスタンスの文字列表現を返す
  def to_s
    "#{@name}, #{@age}"
  end
end

# 新しいハッシュを作り, Studentクラスのインスタンスを複数生成する
students = {
  :shogo => Student.new( "岡崎 正悟", 22 ),
  :nastumi => Student.new( "高間 菜摘", 21 ),
}

# 全てのインスタンスの名前と年齢を表示する
students.each { |key, value|
  puts "#{key} #{value.to_s}"
}
