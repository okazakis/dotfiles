\begin{document}

\begin{enumerate}
 % 大問1
 \item 次の計算をしなさい.
       \begin{edaenumerate}<2>[(1)]
        \item $2a(x-4)$
        \item $3a(a+5b)$
        \item $(8a+5)\times x$
        \item $(7a+4b)\times c$
        \item $8a(3x-4y+1)$
        \item $4b(a+6b-5c)$
        \item $(8xy-6x)\div 2x$
        \item $\displaystyle(5x^2y^2-15axy)\div \frac{5xy}{2}$
        \item $(x+6)(y+2)$
        \item $(p-8)(q-6)$
        \item $(2a+3)(5a+4)$
        \item $(9x-4)(3x-8)$
        \item $(x-3y)(2x-y+5)$
        \item $(x+2)(x+6)$
        \item $(x-5)(x+7)$
        \item $(x+4)(x-1)$
        \item $(x-9)(x-2)$
        \item $(2a+3)(2a+7)$
        \item $(5x+6)(5x-8)$
        \item $(x+5)^2$
        \item $(x-3)^2$
        \item $(2x+5)^2$
        \item $(3x+2y)^2$
        \item $(x+6)(x-6)$
        \item $(x-8)(x+8)$
        \item $(3x+5y)(3x-5y)$
        \item $(3x+2)(x+4)$
        \item $(7p-3)(5p+8)$
       \end{edaenumerate}
       答え
       \begin{edaenumerate}<2>[(1)]
        \item $2ax-8a$
        \item $3a^2+15ab$
        \item $8ax+5x$
        \item $7ac+4bc$
        \item $24ax-32ay+8a$
        \item $4ab+24b^2-20bc$
        \item $4y-3$
        \item $2xy-6a$
        \item $xy+2x+6y+12$
        \item $pq-6p-8q+48$
        \item $10a^2+23a+12$
        \item $27x^2-84x+32$
        \item $2x^2-7xy+3y^2+5x-15y$
        \item $x^2+8x+12$
        \item $x^2+2x-35$
        \item $x^2+3x-4$
        \item $x^2-11x+18$
        \item $4a^2+20a+21$
        \item $25x^2-10x-48$
        \item $x^2+10x+25$
        \item $x^2-6x+9$
        \item $4x^2+20x+25$
        \item $9x^2+12xy+4y^2$
        \item $x^2-36$
        \item $x^2-64$
        \item $9x^2-25y^2$
        \item $3x^2+14x+8$
        \item $35p^2+41p-24$
       \end{edaenumerate}

 % 大問2
 \item 次の連立方程式のグラフをかきなさい.
       \begin{edaenumerate}<2>[(1)]
        \item $2x+6y-12=0$
        \item $5x-y=3$
        \item $2x+6=0$
        \item $\displaystyle \frac{2}{5}x=2$
       \end{edaenumerate}
       
       \begin{zahyou}[%
        ul=15pt,%
        zikusensyu=\thicklines\arrowdrawline,%
        arrowheadsize=2]
        (-7,7)(-7,7)%
        \zahyouMemori[g][n]%
        \xmemori{-5}%
        \xmemori{5}%
        \ymemori{-5}%
        \ymemori{5}
       \end{zahyou}
 % 大問3
 \item 2 直線$l, m$が, それぞれ次の式で表されるとき, $l, m$ の交点の座標
       を求めなさい.
       \begin{edaenumerate}<2>[(1)]
        \item $l: y=x+2$ \hspace{4pt} $m: y=-3x+6$
        \item $l: 2x-4y=5$ \hspace{4pt} $m: x-3y=9$
        \item $l: x=2$ \hspace{4pt} $m: y=5x+7$
        \item $l: 2x+3y=0$ \hspace{4pt} $m: y-7=0$
       \end{edaenumerate}
 % 大問4
 \item 次の図において, 2 直線 $l$ と $m$ の交点をそれぞれ求めなさい.
       \begin{edaenumerate}[(1)]
        \item
        \item
       \end{edaenumerate}
       \begin{minipage}[b]{.5\textwidth}
        \begin{zahyou}[%
         ul=9pt,%
         zikusensyu=\thicklines\arrowdrawline,%
         arrowheadsize=2]
         (-7,7)(-7,7)%
         \zahyouMemori[g][n]%
         \def\Gx{3*X+2}%
         \def\Fx{X-3}%
         \YGraph<migiM=[ne]{$l$}>\Fx%
         \YGraph<migiM=[n]{$m$}>\Gx
         \xmemori{-5}%
         \xmemori{5}%
         \ymemori{-5}%
         \ymemori{5}
        \end{zahyou}
       \end{minipage}
       \begin{minipage}[b]{.5\textwidth}
        \begin{zahyou}[%
         ul=9pt,%
         zikusensyu=\thicklines\arrowdrawline,%
         arrowheadsize=2]
         (-7,7)(-7,7)%
         \zahyouMemori[g][n]%
         \def\Fx{X/3-2}%
         \def\Gx{-4*X+5}%
         \YGraph<migiM=[ne]{$l$}>\Fx%
         \YGraph<migiM=[s]{$m$}>\Gx
         \xmemori{-5}%
         \xmemori{5}%
         \ymemori{-5}%
         \ymemori{5}
        \end{zahyou}
       \end{minipage}

       \begin{edaenumerate}[(3)]
        \item
        \item
       \end{edaenumerate}
       \begin{minipage}[b]{.5\textwidth}
        \begin{zahyou}[%
         ul=9pt,%
         zikusensyu=\thicklines\arrowdrawline,%
         arrowheadsize=2]
         (-7,7)(-7,7)%
         \zahyouMemori[g][n]%
         \def\Gx{2X-2}%
         \def\Fx{-1/2*X+4}%
         \YGraph<migiM=[e]{$l$}>\Fx%
         \YGraph<migiM=[n]{$m$}>\Gx
         \xmemori{-5}%
         \xmemori{5}%
         \ymemori{-5}%
         \ymemori{5}
        \end{zahyou}
       \end{minipage}
       \begin{minipage}[b]{.5\textwidth}
        \begin{zahyou}[%
         ul=9pt,%
         zikusensyu=\thicklines\arrowdrawline,%
         arrowheadsize=2]
         (-7,7)(-7,7)%
         \zahyouMemori[g][n]%
         \def\Fx{3/4*X-6}%
         \def\Gx{-X/3+3}%
         \YGraph<migiM=[e]{$l$}>\Fx%
         \YGraph<migiM=[e]{$m$}>\Gx
         \xmemori{-5}%
         \xmemori{5}%
