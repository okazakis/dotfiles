#!/bin/bash
if [[ $1 =~ ^[0-9]{4}$ ]]
#引数が4桁の数字であるか確認する。
then
#引数が4桁の数字なら以下の処理を実行する。
  keta=` cat kadai1_data.dat `
#円周率のデータを開き、変数ketaに代入する。
  a=1
  b=4
  while :
#whileで繰り返し実行する。
  do
    yonketa=`echo $keta | cut -c $a-$b`
#cutで変数ketaからa-b桁目を切り取り、yonketaに代入する。aとbは1ずつずらす。
   if [ $yonketa = $1 ]
#変数yonketaと引数が同じであるとき以下の処理を実行する。
   then
     echo "$1は円周率の小数点以下$a桁目から始まります"
            break
   fi
#引数が何桁目から始まるかを出力し、ループを抜ける。
      if [ $b -gt 1000000 ]
      then
        echo "入力した数字は存在しません。"
      fi
#引数と同じ4桁の数字が存在しないときのエラー処理を実行する。
   a=`expr $a + 1`
   b=`expr $b + 1`
#aとbに1ずつ加え、処理を繰り返し実行する。
  done
else
  echo "4桁の数字を入力してください" 
fi
#引数が4桁でないときのエラー処理を実行する。
